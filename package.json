{
    "name": "nodesample",
    "version": "0.0.1",
    "description": "Node backend setup with Express & TypeScript Framwork",
    "main": "./src/server.ts",
    "private": true,
    "scripts": {
        "serve": "ts-node ./src/server.ts",
        "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
        "start:watch": "nodemon",
        "build": "tsc"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mak-ansari/node-express-typescript-mysql.git"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm start",
        "ext": "ts"
    },
    "author": "Mak Ansari",
    "license": "ISC",
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "body-parser": "^1.18.3",
        "compression": "~1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^6.2.0",
        "express": "^4.16.3",
        "fs": "0.0.1-security",
        "http-status-codes": "~2.1.4",
        "joi": "^17.4.0",
        "moment": "^2.29.1",
        "mongoose": "^5.13.3",
        "morgan": "~1.10.0",
        "npm": "~7.15.1",
        "path": "^0.12.7",
        "request": "^2.88.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.36",
        "@types/chai": "^4.2.14",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.16.0",
        "@types/mocha": "^5.2.7",
        "bcrypt": "^3.0.8",
        "chai": "^4.2.0",
        "mocha": "^6.2.3",
        "nodemon": "^1.18.3",
        "sleep": "^6.3.0",
        "ts-node": "^8.10.2",
        "typescript": "^4.1.5"
    }
}
